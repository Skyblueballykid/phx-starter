<%= if !!@user.avatar do %>
  <img class="<%= if assigns[:size], do: assigns[:size], else: "w-8 h-8" %> rounded-full" src="<%= @user.avatar %>" alt="Avatar" />
<% else %>
  <div class="<%= if assigns[:size], do: assigns[:size], else: "w-8 h-8" %> hover:bg-gray-100 p-2 rounded-full cursor-pointer">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user">
      <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
      <circle cx="12" cy="7" r="4"></circle>
    </svg>
  </div>
<% end %>